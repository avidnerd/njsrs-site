rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc != null && userDoc.data != null ? userDoc.data.role : null;
    }
    
    function isAdmin() {
      let role = getUserRole();
      return role == 'fair_director' || role == 'website_manager';
    }
    
    // Helper function to check if user is SRA (by checking if SRA document exists)
    function isSRA() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/sras/$(request.auth.uid)) != null &&
             get(/databases/$(database)/documents/sras/$(request.auth.uid)).data != null;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isOwner(userId);
      // Allow users to create their own profile during registration
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Allow users to update their own profile
      allow update: if isOwner(userId);
    }
    
    // Schools collection
    match /schools/{schoolId} {
      // Allow anyone to read schools (for school selection during registration)
      allow read: if true;
      // Allow anyone to create schools (needed for registration before authentication)
      allow create: if true;
      allow update, delete: if false; // Only admins can update/delete (add admin check later)
    }
    
    // SRAs collection
    match /sras/{sraId} {
      // Allow anyone to read SRAs (needed for student registration to select SRA)
      allow read: if true;
      allow create: if isOwner(sraId);
      allow update: if isOwner(sraId) || isAdmin();
    }
    
    // Students collection
    match /students/{studentId} {
      // Allow read if owner, SRA owner, or admin
      // For queries, Firestore will evaluate this for each matching document
      // Check: user is authenticated, has SRA document, and student's sraId matches user's UID
      allow read: if isOwner(studentId) || 
                     (isAuthenticated() &&
                      get(/databases/$(database)/documents/sras/$(request.auth.uid)) != null &&
                      get(/databases/$(database)/documents/sras/$(request.auth.uid)).data != null &&
                      get(/databases/$(database)/documents/students/$(studentId)) != null &&
                      get(/databases/$(database)/documents/students/$(studentId)).data != null &&
                      get(/databases/$(database)/documents/students/$(studentId)).data.sraId == request.auth.uid) ||
                     isAdmin();
      // Allow create if owner
      allow create: if isOwner(studentId);
      // Allow update if owner, SRA owner, or admin
      allow update: if isOwner(studentId) || 
                        (isSRA() && resource.data.sraId == request.auth.uid) ||
                        isAdmin();
    }
    
    // Judges collection
    match /judges/{judgeId} {
      // Allow authenticated users to read (for admin dashboard)
      allow read: if isAuthenticated();
      // Allow judges to create their own document
      allow create: if isOwner(judgeId);
      // Allow judges to update their own document, or admins to update (for approval)
      allow update: if isOwner(judgeId) || isAdmin();
    }
  }
}

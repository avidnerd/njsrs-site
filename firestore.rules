rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isOwner(userId);
      // Allow users to write their own profile (for updates)
      allow write: if isOwner(userId);
    }
    
    // Schools collection
    match /schools/{schoolId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Only admins can update/delete (add admin check later)
    }
    
    // SRAs collection
    match /sras/{sraId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(sraId);
      allow update: if isOwner(sraId);
    }
    
    // Students collection
    match /students/{studentId} {
      allow read: if isOwner(studentId) || 
                     (isAuthenticated() && 
                      getUserRole() == 'sra' && 
                      get(/databases/$(database)/documents/students/$(studentId)).data.sraId == request.auth.uid);
      allow create: if isOwner(studentId);
      allow update: if isOwner(studentId) || 
                        (isAuthenticated() && 
                         getUserRole() == 'sra' && 
                         get(/databases/$(database)/documents/students/$(studentId)).data.sraId == request.auth.uid);
    }
    
    // Judges collection
    match /judges/{judgeId} {
      // Allow authenticated users to read (for admin dashboard)
      allow read: if isAuthenticated();
      // Allow judges to create their own document
      allow create: if isOwner(judgeId);
      // Allow judges to update their own document, or admins to update (for approval)
      allow update: if isOwner(judgeId) || 
                        (isAuthenticated() && 
                         (getUserRole() == 'fair_director' || getUserRole() == 'website_manager'));
    }
  }
}
